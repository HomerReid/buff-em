Convert12[ V_ ] := Module[ 
 {A, B, C, D, Gamma1, Gamma2},
 Gamma1=Coefficient[ V[[3]], u1 ];
 Gamma2=Coefficient[ V[[4]], u1 ];
 A=V[[1]];
 B=V[[2]];
 C=V[[3]] - Gamma1*u1;
 D=V[[4]] - Gamma2*u1;
 { A + Gamma2*(u2-C) + Gamma1*(u2-D), B, C + Gamma1*B, D + Gamma2*B}
 ];

(***************************************************)
(***************************************************)
(***************************************************)
Convert13[ V_ ] := Module[ 
 {A, B, C, D, Gamma1, Gamma2},
 Gamma1=Coefficient[ V[[3]], u1 ];
 Gamma2=Coefficient[ V[[4]], u1 ];
 A=V[[1]];
 B=V[[2]];
 C=V[[3]] - Gamma1*u1;
 D=V[[4]] - Gamma2*u1;
 { A + Gamma2*(u3-C) + Gamma1*(u3-D), B, C + Gamma1*B, D + Gamma2*B}
 ];

(***************************************************)
(***************************************************)
(***************************************************)
Convert23[ V_ ] := Module[ 
 {A, B, C, D, Gamma1, Gamma2},
 Gamma1=Coefficient[ V[[3]], u2 ];
 Gamma2=Coefficient[ V[[4]], u2 ];
 A=V[[1]];
 B=V[[2]];
 C=V[[3]] - Gamma1*u2;
 D=V[[4]] - Gamma2*u2;
 { A + Gamma2*(u3-C) + Gamma1*(u3-D), B, C + Gamma1*B, D + Gamma2*B}
 ];

